<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-zinc-800 px-10 py-5 text-white">

    <h1 class="text-2xl">Create a new Post</h1>
   <hr class="opacity-30 mt-2">

   <form action="/createpost" method="post" enctype="multipart/form-data">

<input class="block w-1/3 px-3 py-2 border-2 rounded-md mt-3 "  type="file" name="postimage">

<input class="block w-1/3 px-3 py-2 border-2 rounded-md mt-3 text-black"  type="text" placeholder="Title" name="title">

<textarea  class="block w-1/3 px-3 py-2 border-2 rounded-md mt-3 text-black" type="text" placeholder="Description" name="description"></textarea>

<input class="block w-1/3 px-3 py-2  rounded-md mt-3 bg-red-600"  type="submit" value="Create">

</form>
</div>

